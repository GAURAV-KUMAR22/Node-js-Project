            <main>
                <% if (errorMessage) { %>
                    <div class="user-message user-message--error">
                        <%= errorMessage %>
                    </div>
                    <main class="form-signin customLogin">
                        <% if (errorMessage) { %>
                            <div class="user-message user-message--error">
                                <%= errorMessage %>
                            </div>
                            <% } %>
                                <form action="/signup" method="POST" novalidate>
                                    <!-- <img class="mb-4" src="" alt="" width="72" height="57"> -->
                                    <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

                                    <div class="form-floating">
                                        <input type="email" name="email"
                                            class="form-control <%= validationErrors.find(e => e.param === 'username') ? 'invalid' : '' %>"" id="
                                            username" floatingInput" placeholder="name@example.com"
                                            value="<%= oldInput.username %>">
                                        <label for="username">UserName</label>
                                    </div>
                                    <div class="form-floating">
                                        <input type="email" name="email"
                                            class="form-control <%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>"
                                            placeholder="Email" value="<%= oldInput.email %>">
                                        <label for="email">E-Mail</label>
                                    </div>
                                    <div class="form-floating">
                                        <input type="password" name="password"
                                            class="form-control <%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>"
                                            placeholder="Email" value="<%= oldInput.password %>">
                                        <label for="password">Password</label>
                                    </div>
                                    <div class="form-floating">
                                        <input type="confirmPassword" name="confirmPassword"
                                            class="form-control <%= validationErrors.find(e => e.param === 'confirmPassword') ? 'invalid' : '' %>"
                                            placeholder="Confirm-Password" value="<%= oldInput.confirmPassword %>">
                                        <label for="confirmPassword">Confirm-Password</label>
                                    </div>
                                    </div>
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <button class="w-100 btn btn-lg btn-primary" type="submit">Signup</button>

                                </form>
                    </main>






